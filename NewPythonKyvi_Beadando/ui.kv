WindowManager:
    LoginWindow:
    ReportWindow:
    RegWindow:

<LoginWindow>:
    name: "login"

    username : name
    password: passwd

    GridLayout:

        cols: 1
        BoxLayout:
            AsyncImage:
                source: 'https://static.wikia.nocookie.net/villains/images/b/ba/Eb0.png/revision/latest?cb=20190126211834'
                allow_stretch: True
        GridLayout:
            cols:1
            GridLayout:
                cols: 2
                GridLayout:
                    cols: 1
                    rows: 4
                    Label:
                        text: 'Welcome to Python-Data Constructor!'
                        size_hint: 0.1, 0.1
                    Label:
                        text: 'Please Give use your ID and Password.'
                        size_hint: 0.1, 0.1
                    Label:
                        text: 'Research personal with a minimum of level 4 clearance is allowed to enter.'
                        size_hint: 0.1, 0.1
        GridLayout:
            cols:2
            Label:
                text: 'ID'
                size_hint: .1, None
            TextInput:
                id: name
                size_hint: .1, None
                multiline: False
                password: True
            Label:
                text: 'Password'
                size_hint: .1, None
            TextInput:
                id: passwd
                size_hint: .1, None
                multiline: False
                password: True
        Button:
            text: "Login To Site 32's Data Center"
            size_hint: 0.2, 0.2
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        Button:
            text: "Create new account"
            size_hint: 0.2, 0.2
            on_release:
                root.manager.transition.direction = "down"
                root.registration()

<ReportWindow>:
    name: "report"
    scp : input

    GridLayout:
        cols:1
        Label:
            text: 'Please Give SCP-ID that you want to have Information of:'
            size_hint: 0.1, 0.1
        TextInput:
            id: input
            multiline: False
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Search"
                on_release:
                    root.search()
                    root.manager.transition.direction = "right"
            Button:
                text: "Log Out"
                pos_hint: {'right': 1}
                on_release:
                    app.root.current = "login"
                    root.manager.transition.direction = "right"

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (1, 0, 0, 1) if self.selected else (.0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (1, 0, 0, 1) if self.selected else (.0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size
<RegWindow>:
    name : "reg"

    username : user
    password : pwd


    GridLayout:
        cols:1

        GridLayout:
            size: root.width, root.height/2
            cols:1
            Label:
                text: "SCP personal registration. New SCP foundation members clearance level is 1."
                size_hint: .1, None

            Label:
                size_hint: .1, None
                text: "Username: "

            TextInput:
                size_hint: .1, None
                id: user
                multiline: False

            Label:
                size_hint: .1, None
                text: "Password: "

            TextInput:
                size_hint: .1, None
                id: pwd
                multiline: False
                password: True

        Button:
            size_hint: 0.4, 0.1
            text: "Already own an account?"
            on_release:
                root.manager.transition.direction = "up"
                root.back()

        Button:
            size_hint: 0.6, 0.15
            text: "Registration"
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
                root.clear()
